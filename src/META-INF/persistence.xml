<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="4Tunes">
	    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>jdbc/4Tunes</jta-data-source>
		<class>model.Album</class>
		<class>model.Artiste</class>
		<class>model.Chanson</class>
		<class>model.Utilisateur</class>
		<class>model.Genre</class>
	    <properties>
        	<property name="javax.persistence.jdbc.url" value="jdbc:mysql://mysql.deptinfo-st.univ-fcomte.fr:3306/pad"/>
       	 	<property name="javax.persistence.jdbc.user" value="pad"/>
			<property name="javax.persistence.jdbc.password" value="pad"/>
        	<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        	<property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
        </properties>
	</persistence-unit>
</persistence>
